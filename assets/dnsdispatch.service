[Unit]
Description=DNS dispathing server on 5300
Requires=systemd-resolved.service dnsconvert.service
After=systemd-resolved.service dnsconvert.service
Conflicts=dnsmasq.service

[Install]
WantedBy=router.target

[Service]
ExecStart=/usr/sbin/dnsmasq -k --conf-dir=/etc/dnsmasq.d,*.conf
Type=simple

RestartSec=5s
Restart=on-failure

ProtectSystem=strict
PrivateDevices=yes
ProtectKernelTunables=yes
ProtectControlGroups=yes
ProtectHome=yes

InaccessiblePaths=/data /etc/dnsmasq.conf
BindPaths=${AppDataDir}/dns/dispatch:/etc/dnsmasq.d

Slice=router.slice
